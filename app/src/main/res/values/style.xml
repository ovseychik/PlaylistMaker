<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/main_button_text</item>
        <item name="android:textSize">22sp</item>
        <item name="backgroundTint">@color/main_button_background</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/main_button_icon</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
    </style>

    <style name="SettingsStyle">
        <item name="android:textColor">@color/settings_text_list</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@color/settings_background</item>
    </style>

    <style name="SwitchCompatStyle">
        <item name="colorControlActivated">#3772E7</item>
    </style>

    <style name="SettingsShareStyle">
        <item name="android:textColor">@color/settings_text_list</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@color/settings_background</item>
        <item name="android:drawableEnd">@drawable/ic_share_day</item>
    </style>

    <style name="SettingsSupportStyle">
        <item name="android:textColor">@color/settings_text_list</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@color/settings_background</item>
        <item name="android:drawableEnd">@drawable/ic_support_day</item>
    </style>

    <style name="SettingsLegalStyle">
        <item name="android:textColor">@color/settings_text_list</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:background">@color/settings_background</item>
        <item name="android:drawableEnd">@drawable/ic_forward_day</item>
    </style>

    <style name="HeadsText">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/no_main_menu_head</item>
        <item name="android:textSize">@dimen/head_text</item>
        <item name="android:layout_marginStart">@dimen/head_margin_title</item>
    </style>

    <style name="HeadsTextConstraint">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/no_main_menu_head</item>
        <item name="android:textSize">@dimen/head_text</item>
        <item name="android:layout_marginLeft">@dimen/margin16</item>
        <item name="android:layout_marginTop">@dimen/margin16</item>
    </style>

    <style name="HeadsImage">
        <item name="android:src">@drawable/ic_arrow_back_day</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="HeadsImageConstraint">
        <item name="android:src">@drawable/ic_arrow_back_day</item>
    </style>

    <style name="HeadsLayout">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginStart">@dimen/head_margin_start_image</item>
        <item name="android:layout_marginTop">@dimen/head_margin_top_image</item>
    </style>

    <style name="SearchBarImage">
        <item name="android:src">@drawable/ic_search_inline_day</item>
    </style>

    <style name="ClearSearchField">
        <item name="android:src">@drawable/ic_do_clear_field_day</item>
    </style>

    <style name="TrackName">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/track_name</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TrackBandAndDuration">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/band_name</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="ForwardIconStyle">
        <item name="android:drawableEnd">@drawable/ic_forward_day</item>
    </style>

    <style name="SeparatorEllipse">
        <item name="android:src">@drawable/separator_ellipse</item>
    </style>

    <style name="PlayerTrackName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_track_and_album_name</item>
    </style>

    <style name="PlayerArtistName">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_track_and_album_name</item>
    </style>

    <style name="PlayerBigButton">
        <item name="tint">@color/player_button_play_outside</item>
        <item name="backgroundTint">@color/player_button_play_inside</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="PlayerCurrentTime">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">@color/player_current_time</item>
    </style>

    <style name="PlayerAttributesNames">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/player_attributes_names</item>
    </style>

    <style name="PlayerAttributesValues">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textColor">@color/player_attributes_values</item>
    </style>

    <style name="button_create_new_playlist">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cornerRadius">54dp</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- Media library tabs style -->
    <style name="tab_indicator" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicatorColor">@color/black</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabInlineLabel">true</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
    </style>

    <style name="TextTabLayout">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/black</item>
        <item name="tabIndicatorColor">@color/black</item>
    </style>

    <style name="divider_context_nav_bar">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>