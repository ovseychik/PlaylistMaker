<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/settings_background"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/padding16"
    tools:context=".SettingsActivity">

    <LinearLayout
        style="@style/HeadsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/settings_background">

        <ImageView
            android:id="@+id/btn_back"
            style="@style/HeadsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/settings_background" />

        <TextView
            style="@style/HeadsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/settings_background"
            android:text="@string/settings" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin42"
        android:background="@color/settings_background">

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/themeSwitcher"
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_gravity="start"
            android:text="@string/night_theme" />
    </FrameLayout>

    <TextView
        android:id="@+id/btn_share"
        style="@style/SettingsShareStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin42"
        android:text="@string/share_app" />

    <TextView
        android:id="@+id/btn_support"
        style="@style/SettingsSupportStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin42"
        android:text="@string/write_to_support" />

    <TextView
        android:id="@+id/btn_legal"
        style="@style/SettingsLegalStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin42"
        android:text="@string/license_agreement" />

</LinearLayout>