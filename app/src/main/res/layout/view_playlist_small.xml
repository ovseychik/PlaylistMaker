<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemPlaylistSmall"
    android:layout_width="match_parent"
    android:layout_height="@dimen/root_layout_height"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageview_playlist_cover_small"
        android:layout_width="@dimen/album_cover_size"
        android:layout_height="@dimen/album_cover_size"
        android:layout_marginVertical="@dimen/album_cover_margin_vertical"
        android:layout_marginStart="@dimen/album_cover_margin_start"
        tools:src="@drawable/ic_album_cover_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/margin8"
        android:layout_marginEnd="44dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_playlist_title"
            style="@style/PlaylistViewSmallName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="@dimen/text16"
            tools:text="Live fast Die young" />

        <TextView
            android:id="@+id/textview_number_of_tracks"
            style="@style/PlaylistViewSmallDescription"
            android:ellipsize="end"
            android:maxLines="1"
            tools:text="8-800-555-35-35 треков" />

    </LinearLayout>

</LinearLayout>